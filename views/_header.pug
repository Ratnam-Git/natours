//- No need to declare 'div' as it is a default block element
//- include classes by using '.' after element

header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
  .header__logo
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
    //- using conditionals in pug
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href="/me")
        img.nav__user-img(src=`img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href="/login") LogIn
      a.nav__el.nav__el--cta#signup(href="/signup") SignUp